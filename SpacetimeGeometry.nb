Cell[TextData[{
 "The triangles ",
 Cell[BoxData[
  RowBox[{"0", 
   SubscriptBox["\[Tau]", "1"], 
   SubscriptBox["\[Sigma]", "2"]}]],ExpressionUUID->
  "acbe97eb-508b-40b4-acec-dffd397cf461"],
 " and ",
