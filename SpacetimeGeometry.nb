Cell[BoxData[{
 RowBox[{
  RowBox[{
   RowBox[{"SREquations", "::", "usage"}], "=", 
   "\"\<SREquations are a set of equations connecting the relativity \
variables {\[Tau], k, \[Sigma], x, v, t, \[Gamma]}. These variables are \
automatically cleared each time SREquations is evaluated. The equations \
are:\\n\[Tau] \[Equal] k \[Sigma]\\nx \[Equal] v \
t\\n\\!\\(\[Tau]\\^\\(\\(2\\)\\( \\)\\)\\)\[Equal] \\!\\(t\\^2\\)-\\!\\(x\\^2\
\\)\\nv \[Equal] (\\!\\(k\\^2\\)-1)/(\\!\\(k\\^2\\)+1)\\n\[Gamma] \[Equal] 1/\
\\!\\(\\@\\(1 - v\\^2\\)\\)\>\""}], ";"}], "\[IndentingNewLine]", 
 RowBox[{
  RowBox[{"SREquations", "=", 
   RowBox[{"(", 
    RowBox[{
     RowBox[{"Clear", "[", 
      RowBox[{
      "\[Tau]", ",", "k", ",", "\[Sigma]", ",", "x", ",", "v", ",", "t", ",", 
       "\[Gamma]"}], "]"}], ";", 
     RowBox[{"{", 
      RowBox[{
       RowBox[{"\[Tau]", "\[Equal]", 
        RowBox[{"k", " ", "\[Sigma]"}]}], ",", 
       RowBox[{"x", "\[Equal]", 
        RowBox[{"v", " ", "t"}]}], ",", " ", 
       RowBox[{
        SuperscriptBox["\[Tau]", "2"], "\[Equal]", 
        RowBox[{
         SuperscriptBox["t", "2"], "-", 
         SuperscriptBox["x", "2"]}]}], ",", 
       RowBox[{"v", "\[Equal]", 
        RowBox[{
         RowBox[{"(", 
          RowBox[{
           SuperscriptBox["k", "2"], "-", "1"}], ")"}], "/", 
         RowBox[{"(", 
          RowBox[{
           SuperscriptBox["k", "2"], "+", "1"}], ")"}]}]}], ",", 
       RowBox[{"\[Gamma]", "\[Equal]", 
        RowBox[{"1", "/", 
         SqrtBox[
          RowBox[{"1", "-", 
           SuperscriptBox["v", "2"]}]]}]}]}], "}"}]}], ")"}]}], 
  ";"}]}], "Input",
 InitializationCell->
  True,ExpressionUUID->"aa1b4fab-1696-4135-b283-36ed03453e3a"],

